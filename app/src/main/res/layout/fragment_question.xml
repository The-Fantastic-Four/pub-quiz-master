<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="is.hi.hbv601.pubquiz.fragment.QuestionFragment">


    <TextView
        android:id="@+id/questionNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignStart="@+id/questionText"
        android:textAlignment="textStart"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/picture_view"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_below="@+id/questionNumber"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:maxWidth="270dp"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/picture_view"
        android:autoSizeMaxTextSize="28dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/questionAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|textMultiLine"
        android:layout_below="@+id/questionText"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="235dp" />

    <Button
        android:id="@+id/questionAnswerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionAnswer"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/answer_button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="320dp" />

</RelativeLayout>
